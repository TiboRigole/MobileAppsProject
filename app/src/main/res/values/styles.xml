<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorBackgroundLight</item>
    </style>

    <style name="buttonStyle" parent="AppTheme">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="MyEditTextTheme"  parent="AppTheme">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/colorText</item>
        <item name="android:textColor">@color/colorTextInv</item>
        <item name="android:textColorHint">@color/colorTextHint</item>


    </style>

    <style name="toolbarStyle"  parent="AppTheme">
        <item name="android:textColorPrimary">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorText</item>
        <item name="android:actionMenuTextColor">@color/colorText</item>

        <item name="colorControlNormal">?android:attr/textColorPrimary</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>
</resources>
